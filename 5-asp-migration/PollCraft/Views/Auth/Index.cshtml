@{
    ViewData["Title"] = "Login | Register";
    Layout = "_Non_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Auth/Auth.css" />
}

<div class="auth-container">
    <div class="auth-wrapper">
        <div class="auth-header">
            <h1 class="auth-title">Welcome to PollCraft</h1>
            <p class="auth-subtitle">Create amazing surveys and collect valuable insights</p>
        </div>

        <!-- Toggle Buttons -->
        <div class="auth-toggle">
            <button type="button" class="toggle-btn active" data-form="login">Login</button>
            <button type="button" class="toggle-btn" data-form="register">Register</button>
            <div class="toggle-slider"></div>
        </div>

        <!-- General Error Message Area -->
        <div class="general-error" id="generalError" style="display: none;">
            <i class="error-icon">‚ö†Ô∏è</i>
            <span class="error-message" id="generalErrorMessage"></span>
        </div>

        <!-- Login Form -->
        <div class="form-container active" id="loginForm">
            <form method="post" 
            id="loginFormForm" class="auth-form">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label for="loginEmail" class="form-label">Email Address</label>
                    <div class="input-wrapper">
                        <input type="email" id="loginEmail" name="Email" class="form-input" placeholder="Enter your email" required />
                        <i class="input-icon">üìß</i>
                    </div>
                    <div class="field-error" id="loginEmailError" style="display: none;">
                        <i class="error-icon">‚ùå</i>
                        <span class="error-message"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="loginPassword" class="form-label">Password</label>
                    <div class="input-wrapper">
                        <input type="password" id="loginPassword" name="Password" class="form-input" placeholder="Enter your password" required />
                        <i class="input-icon">üîí</i>
                        <button type="button" class="password-toggle" data-target="loginPassword">
                            <i class="toggle-icon">üëÅÔ∏è</i>
                        </button>
