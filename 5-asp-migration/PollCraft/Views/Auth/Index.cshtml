                        <label for="registerSurname" class="form-label">Last Name</label>
                        <div class="input-wrapper">
                            <input type="text" id="registerSurname" name="LastName" class="form-input" placeholder="Last name" required />
                            <i class="input-icon">üë§</i>
                        </div>
                        <div class="field-error" id="registerSurnameError" style="display: none;">
                            <i class="error-icon">‚ùå</i>
                            <span class="error-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="registerUsername" class="form-label">Username</label>
                    <div class="input-wrapper">
                        <input type="text" id="registerUsername" name="Username" class="form-input" placeholder="Choose a username" required />
